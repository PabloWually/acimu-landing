---
import { Layers, Menu, X } from 'lucide-astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
  <nav class="container">
    <a href="/" class="logo">
      <Layers size={32} />
      <span>ACIMU</span>
    </a>
    <div class="nav-items">
      <ul class="nav-links">
        <li><a href="/">Inicio</a></li>
        <li><a href="/about">Acerca de</a></li>
        <li><a href="/portfolio">Portafolio</a></li>
        <li><a href="/blog">Blog</a></li>
        <li><a href="/contact">Contacto</a></li>
      </ul>
      <ThemeToggle />
    </div>
    <button class="mobile-menu-button">
      <Menu size={32} class="open-icon" />
      <X size={32} class="close-icon" />
    </button>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--color-muted);
    padding: var(--spacing-md) 0;
    position: sticky;
    top: 0;
    background-color: var(--color-background);
    z-index: 20;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.5rem;
    font-weight: bold;
    font-family: var(--font-serif);
    z-index: 20;
  }
  .nav-items {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }
  .nav-links {
    display: flex;
    gap: var(--spacing-md);
    list-style: none;
    margin: 0;
    padding: 0;
  }
  .mobile-menu-button {
    display: none;
    background: none;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    z-index: 20;
  }
  .close-icon {
    display: none;
  }

  @media (max-width: 768px) {
    header {
      padding: var(--spacing-sm) 0;
    }
    .logo {
      font-size: 1.25rem;
    }
    .nav-items {
      position: fixed;
      top: 0;
      right: 0;
      width: 100%;
      height: 100vh;
      background-color: var(--color-background);
      flex-direction: column;
      justify-content: center;
      align-items: center;
      transform: translateX(100%);
      transition: transform 0.3s ease-in-out;
      padding: 0;
    }
    .nav-items.is-open {
      transform: translateX(0);
    }
    .nav-links {
      flex-direction: column;
      font-size: 2rem;
      text-align: center;
      gap: var(--spacing-lg);
    }
    .mobile-menu-button {
      display: block;
    }
    .is-open .open-icon {
      display: none;
    }
    .is-open .close-icon {
      display: block;
    }
  }

  @media (max-width: 480px) {
    .logo {
      font-size: 1.1rem;
      gap: 6px;
    }
    .nav-links {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.querySelector('.mobile-menu-button');
    const navItems = document.querySelector('.nav-items');
    const body = document.body;

    menuButton.addEventListener('click', () => {
      navItems.classList.toggle('is-open');
      body.classList.toggle('is-open');
    });
  });
</script>
