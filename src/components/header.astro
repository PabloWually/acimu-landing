---
import { Layers, Menu, X } from 'lucide-astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
  <nav class="container">
    <a href="/" class="logo">
      <div class="name-container">
        <span>Arquitectos</span>
        <span>Cinco</span>
        <span>Mas Uno</span>
      </div>
    </a>
    <button class="menu-button">
      <Menu size={32} class="open-icon" />
      <X size={32} class="close-icon" />
    </button>
  </nav>
</header>

<div class="full-screen-menu">
  <button class="close-menu-button">
    <X size={32} />
  </button>
  <div class="menu-image">
    <img src="https://d37oqcizs0sma9.cloudfront.net/menu.png" alt="Equipo Acimu" />
  </div>
  <div class="menu-items">
    <ul class="nav-links">
      <li><a href="/">Inicio</a></li>
      <li><a href="/about">Acerca de</a></li>
      <li><a href="/portfolio">Portafolio</a></li>
      <li><a href="/contact">Contacto</a></li>
    </ul>
    <ThemeToggle />
  </div>
</div>

<style>
  header {
    padding: var(--spacing-sm) 0;
    position: fixed;
    top: 2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    z-index: 20;
    transition: all 0.3s ease-in-out;
  }

  header.scrolled {
    width: 100%;
    top: 0;
    border-radius: 0;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-muted);
  }

  .name-container {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-end;
    font-size: 2rem;
    font-weight: bold;
    font-family: var(--font-complex);
    line-height: 1.2;
    transition: font-size 0.3s ease-in-out;
  }

  .name-container.scrolled {
    font-size: 1rem;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 1.5rem;
    font-weight: bold;
    font-family: var(--font-serif);
    z-index: 20;
  }
  .menu-button {
    background: none;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    z-index: 30;
    position: relative;
  }
  .close-icon {
    display: none;
  }
  .menu-button.is-open .open-icon {
    display: none;
  }
  .menu-button.is-open .close-icon {
    display: block;
  }

  .full-screen-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: var(--color-background);
    display: flex;
    justify-content: center;
    gap: 10rem;
    transform: translateX(100%);
    transition: transform 0.3s ease-in-out;
    z-index: 25;
  }

  .close-menu-button {
    position: absolute;
    top: 2rem;
    right: 2rem;
    background: none;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    z-index: 35;
  }

  .full-screen-menu.is-open {
    transform: translateX(0);
  }

  .menu-image {
    display: flex;
    align-items: center;
    width: 30%;
    height: 100%;
  }

  .menu-image img {
    width: 100%;
    height: auto;
  }

  .menu-items {
    width: 20%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .nav-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    font-size: 2rem;
    text-align: center;
    gap: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    header {
      width: 90%;
    }
    .menu-image {
      display: none;
    }
    .menu-items {
      width: 100%;
    }
    .logo {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .logo {
      font-size: 1.1rem;
      gap: 6px;
    }
    .nav-links {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.querySelector('.menu-button');
    const closeMenuButton = document.querySelector('.close-menu-button');
    const fullScreenMenu = document.querySelector('.full-screen-menu');
    const body = document.body;
    const header = document.querySelector('header');
    const name = document.querySelector('.name-container');

    function openMenu() {
      fullScreenMenu.classList.add('is-open');
      body.classList.add('is-open');
      menuButton.classList.add('is-open');
    }

    function closeMenu() {
      fullScreenMenu.classList.remove('is-open');
      body.classList.remove('is-open');
      menuButton.classList.remove('is-open');
    }

    menuButton.addEventListener('click', () => {
      if (fullScreenMenu.classList.contains('is-open')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    closeMenuButton.addEventListener('click', () => {
      closeMenu();
    });

    window.addEventListener('scroll', () => {
      if (window.scrollY > 50) {
        header.classList.add('scrolled');
        name.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
        name.classList.remove('scrolled');
      }
    });
  });
</script>
