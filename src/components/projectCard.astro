---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  url: string;
}

const { title, description, imageUrl, url } = Astro.props;
---

<div class="item-container">
  <div class="description">
    <h3>{title}</h3>
    <p>{description}</p>
    <button class="redirect" onclick={`window.location.href = '${url}'`}>Ver Proyecto</button>
  </div>
  <div class="img-cotainer"><img src={imageUrl} alt={title}></div>
</div>

<style>
  .item-container {
    width: 100%;
    height: 100%;
    display: flex;
    background-color: var(--color-background);
  }
  .description {
    width: 50%;
    height: 100%;
    padding: 40px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .img-cotainer {
    width: 50%;
    height: 100%;
  }
  .img-cotainer img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .redirect {
    min-width: 150px;
    max-width: 200px;
    background-color: var(--color-muted);
    border: none;
    padding: 10px 20px;
    color: #fff;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 4px;
    text-transform: uppercase;
  }
  .redirect:hover {
    background-color: var(--color-accent);
  }
  @media (max-width: 768px) {
    .item-container {
      display: block;
      position: relative;
    }
    .img-cotainer {
      width: 100%;
    }
    .description {
      width: 100%;
      height: 40%;
      padding: var(--spacing-sm);
      position: absolute;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      filter: drop-shadow(0px -5px 5px rgba(0, 0, 0, 0.5));
    }
    .description h3 {
      margin: 0;
      font-size: 1.5rem;
    }
    .description p {
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 4;
      -webkit-box-orient: vertical;
    }
  }
</style>
