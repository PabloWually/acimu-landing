---
import { Icon } from "astro-icon/components";

const projects = [
  {
    id: 1,
    title: "Skyline Residence",
    category: "Residential",
    location: "New York, NY",
    image: "/placeholder.svg?height=600&width=800",
    description:
      "A modern penthouse that maximizes natural light and city views.",
  },
  {
    id: 2,
    title: "Green Office Complex",
    category: "Commercial",
    location: "San Francisco, CA",
    image: "/placeholder.svg?height=600&width=800",
    description: "Sustainable office space with integrated green technology.",
  },
  {
    id: 3,
    title: "Cultural Center",
    category: "Public",
    location: "Chicago, IL",
    image: "/placeholder.svg?height=600&width=800",
    description: "A community hub that celebrates local arts and culture.",
  },
];
---

<section class="py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-playfair font-bold mb-6">
        Featured Projects
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Discover our latest architectural achievements that showcase innovation,
        sustainability, and exceptional design.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {
        projects.map((project, index) => (
          <div class="overflow-hidden group hover:shadow-xl transition-all duration-500">
            <div class="relative h-64 overflow-hidden">
              <img
                src={project.image || "/placeholder.svg"}
                alt={project.title}
                class="object-cover group-hover:scale-110 transition-transform duration-500 fill"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
              <div class="absolute bottom-4 left-4 right-4 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="mb-2">{project.category}</div>
                <p class="text-sm">{project.location}</p>
              </div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                {project.title}
              </h3>
              <p class="text-muted-foreground mb-4">{project.description}</p>
              <a
                href={`/portfolio/${project.id}`}
                class="inline-flex items-center text-primary hover:text-primary/80 transition-colors"
              >
                View Project
                <Icon name="mdi:arrow-right" class="ml-1 h-4 w-4" />
              </a>
            </div>
          </div>
        ))
      }
    </div>

    <div class="text-center">
      <a
        href="/portfolio"
        class="inline-flex items-center text-lg font-medium text-primary hover:text-primary/80 transition-colors"
      >
        View All Projects
        <Icon name="mdi:arrow-right" class="ml-1 h-4 w-4" />
      </a>
    </div>
  </div>
</section>
