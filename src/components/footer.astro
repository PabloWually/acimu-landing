---
import { Icon } from 'astro-icon/components'

const currentYear = new Date().getFullYear();
---

<footer class="bg-muted/50 border-t">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <h3 class="text-2xl font-playfair font-bold">Arcadia Studio</h3>
        <p class="text-muted-foreground leading-relaxed">
          Creating innovative architectural solutions that inspire and endure. Building the future, one project at a time.
        </p>
        <div class="flex space-x-4">
          <button class="btn-ghost h-10 w-10 flex items-center justify-center">
            <Icon name="facebook" class="h-4 w-4" />
          </button>
          <button class="btn-ghost h-10 w-10 flex items-center justify-center">
            <Icon name="twitter" class="h-4 w-4" />
          </button>
          <button class="btn-ghost h-10 w-10 flex items-center justify-center">
            <Icon name="instagram" class="h-4 w-4" />
          </button>
          <button class="btn-ghost h-10 w-10 flex items-center justify-center">
            <Icon name="linkedin" class="h-4 w-4" />
          </button>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Quick Links</h4>
        <nav class="flex flex-col space-y-2">
          <a href="/about" class="text-muted-foreground hover:text-primary transition-colors">About Us</a>
          <a href="/portfolio" class="text-muted-foreground hover:text-primary transition-colors">Portfolio</a>
          <a href="/blog" class="text-muted-foreground hover:text-primary transition-colors">Blog</a>
          <a href="/contact" class="text-muted-foreground hover:text-primary transition-colors">Contact</a>
        </nav>
      </div>

      <!-- Services -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Services</h4>
        <nav class="flex flex-col space-y-2">
          <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Residential Design</a>
          <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Commercial Architecture</a>
          <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Sustainable Design</a>
          <a href="#" class="text-muted-foreground hover:text-primary transition-colors">Consultation</a>
        </nav>
      </div>

      <!-- Contact & Newsletter -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Stay Connected</h4>
        <div class="space-y-3">
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <!-- <Mail class="h-4 w-4" /> hello@arcadiastudio.com -->
            Mail
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <!-- <Phone class="h-4 w-4" /> +1 (555) 123-4567 -->
            Phone
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <!-- <MapPin class="h-4 w-4" /> 123 Design Street, NY 10001 -->
            Map
          </div>
        </div>
        <div class="space-y-2">
          <p class="text-sm text-muted-foreground">Subscribe to our newsletter</p>
          <div class="flex gap-2">
            <input type="email" placeholder="Your email" class="input flex-1" />
            <button class="btn btn-sm">Subscribe</button>
          </div>
        </div>
      </div>
    </div>

    <div class="border-t mt-12 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-muted-foreground">
        Â© {currentYear} Arcadia Studio. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm text-muted-foreground">
        <a href="#" class="hover:text-primary transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-primary transition-colors">Terms of Service</a>
        <a href="#" class="hover:text-primary transition-colors">Cookie Policy</a>
      </div>
    </div>
  </div>
</footer>
