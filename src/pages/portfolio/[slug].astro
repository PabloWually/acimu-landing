---
import Layout from "@/layouts/Layout.astro";
import InfiniteCarousel from "@/components/InfiniteCarousel.astro";
import projects from "@/data/projects";

export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { title, description, location, startDate, type, imageUrl, images } =
  Astro.props.project;

const date = new Date(startDate);
const month = date.toLocaleDateString("es-ES", { month: "long" });
const year = date.getFullYear();
const capitalizedMonth = month.charAt(0).toUpperCase() + month.slice(1);
const formattedDate = `${capitalizedMonth}, ${year}`;
---

<Layout title={title} description={description}>
  <div class="container">
    <div class="title">
      <h1>{title}</h1>
    </div>
    <article class="project-detail">
      <div class="hero-image">
        <InfiniteCarousel images={images} direction="left" />
        <InfiniteCarousel images={images} direction="right" />
        <h4>{location}</h4>
      </div>
      <div class="info">
        <h1>Descripcion General</h1>
        <h4>Inicio del Proyecto: {formattedDate}</h4>
        <h4>Tipo de Construcci√≥n: {type}</h4>
        <p>{description}</p>
      </div>
    </article>
  </div>
</Layout>

<style>
  .title {
    margin-top: 15rem;
  }
  .title h1 {
    color: var(--color-primary);
    font-family: var(--font-complex);
    font-size: 2rem;
    text-transform: uppercase;
    line-height: 1;
    margin-bottom: var(--spacing-sm);
  }

  .project-detail .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .project-detail .hero-image h4 {
    text-align: right;
    margin-top: 1rem;
    font-weight: normal;
    margin: 0;
  }

  .project-detail .info {
    padding-right: 25rem;
  }

  .project-detail .info h1 {
    margin-bottom: 1rem;
  }

  .project-detail .info p {
    line-height: 1.7;
    white-space: pre-wrap;
  }

  @media (max-width: 768px) {
    .project-detail .info {
      padding-right: 0;
    }
    .title h1 {
      font-size: 2rem;
    }
  }
</style>
